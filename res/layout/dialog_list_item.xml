<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_item_selector">
    <ImageView 
	    android:id="@+id/dialog_image_item_arrow"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/size_40"
	    android:contentDescription="@string/app_name"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="@dimen/margin_10"
	    android:src="@drawable/ic_listitem_arrow_right"/>
	<TextView 
	    android:id="@+id/dialog_txt_item"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/size_40"
    	android:layout_marginLeft="@dimen/margin_5"
       	android:layout_centerVertical="true"
       	android:layout_toLeftOf="@id/dialog_image_item_arrow"
       	android:text="@string/app_name"
    	android:gravity="center"/>
</RelativeLayout>
