<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/honey_dew" >
    <RelativeLayout 
        android:id="@+id/layout_time"
        android:layout_width="@dimen/size_100"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center">
        <TextView 
            android:id="@+id/txt_result_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_15"
            android:paddingBottom="@dimen/padding_2"
            android:singleLine="true"
            android:text="2013-03-19"
            style="@style/TextBlackCenter15"/>
        <TextView
            android:id="@+id/txt_result_time"
            style="@style/TextBlackCenter20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_result_date"
            android:paddingBottom="@dimen/padding_15"
            android:paddingTop="@dimen/padding_2"
            android:singleLine="true"
            android:text="09:59" />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/layout_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_100"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/layout_time">
        <ImageView 
       	    android:id="@+id/image_result_tag"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_centerVertical="true"
       	    android:background="@drawable/result_circle_process"/>
       	<ImageView 
       	    android:layout_width="@dimen/size_4"
       	    android:layout_height="fill_parent"
       	    android:layout_above="@id/image_result_tag"
       	    android:layout_centerHorizontal="true"
       	    android:background="@color/misty_rose"/>
       	<ImageView 
       	    android:layout_width="@dimen/size_4"
       	    android:layout_height="fill_parent"
       	    android:layout_below="@id/image_result_tag"
       	    android:layout_centerHorizontal="true"
       	    android:background="@color/misty_rose"/>
    </RelativeLayout>
    <TextView 
        android:id="@+id/txt_result_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/layout_tag"
        android:gravity="center_vertical"
        android:text="广州市由省局快速佩蒂处理中戏未到达的敌法美好"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_15"
        android:paddingBottom="@dimen/padding_15"
        android:layout_centerVertical="true"
        style="@style/TextBlackLeft17"/>
</RelativeLayout>
