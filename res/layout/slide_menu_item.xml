<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slide_menu_item_selector" >
	<ImageView 
	    android:id="@+id/menu_item_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:src="@drawable/icon_search"
	    android:layout_marginRight="@dimen/margin_15"
	    android:layout_marginLeft="@dimen/margin_10"/>
	<TextView 
	    android:id="@+id/menu_item_title"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/slide_menu_item_height"
	    android:layout_toRightOf="@id/menu_item_icon"
	    android:layout_centerVertical="true"
	    android:gravity="center_vertical"
	    android:textColor="@color/white"
	    android:textSize="@dimen/text_18"/>
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:src="@drawable/slide_menu_item_arrow"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="@dimen/margin_15"
	    android:layout_marginLeft="@dimen/margin_10"/>
</RelativeLayout>
